<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item"
    android:padding="10dp">



    <TextView
        android:id="@+id/rankusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Marshmallow"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/rankname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rankusername"
        android:layout_marginTop="5dp"
        android:text="elcin"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/ranklastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cand"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/rankname"
        android:layout_alignBottom="@+id/rankname"
        android:layout_marginStart="38dp" />
    <TextView
        android:id="@+id/rankscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textColor="@android:color/black"
        android:layout_marginEnd="41dp"
        android:layout_below="@+id/rankusername"
        android:layout_toStartOf="@+id/friend_challenge" />




    <ImageButton
        android:id="@+id/addfriendrank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/rank_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_circle_outline_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/addfriendrank" />






</RelativeLayout>
